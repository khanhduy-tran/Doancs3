<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.FragmentMap">

    <!-- TODO: Update blank fragment layout -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:gravity="bottom|right"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/imgZoomInt"
            android:src="@drawable/zoom_in_80px"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/imgZoomOut"
            android:src="@drawable/zoom_out_80px"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/imgHotel"
            android:src="@drawable/hotel_80px"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/imgLocation"
            android:src="@drawable/vitricuaban_80px"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    <ImageView
        android:id="@+id/imgChiDuong"
        android:src="@drawable/west_direction_80px"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"/>


    </LinearLayout>
</FrameLayout>