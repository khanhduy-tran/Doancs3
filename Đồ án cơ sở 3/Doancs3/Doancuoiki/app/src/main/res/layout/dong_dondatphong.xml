<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:layout_gravity="center"
    android:gravity="center">
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="5dp"
            android:src="@drawable/ordericon"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="8"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:textColor="#008CFF"
            android:text="Mã hóa đơn:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:fontFamily="sans-serif-light"
            android:layout_margin="5dp"
            android:id="@+id/textViewMaDonKH"
            android:textColor="#f20"
            android:textSize="20sp"
            android:text="Mã đơn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:textColor="#008CFF"
                android:text="Tên KH:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView

            android:fontFamily="sans-serif-light"
            android:layout_margin="5dp"
            android:id="@+id/textViewTenKH"
            android:textColor="#0055FF"
            android:textSize="20sp"
            android:text="Trần Khánh Duy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:textColor="#008CFF"
                android:text="Email:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView

            android:fontFamily="sans-serif-light"
            android:layout_margin="5dp"
            android:id="@+id/textViewEmailKH"
            android:textColor="#F90B0A0A"
            android:textSize="20sp"
            android:text="Mã đơn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>