<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.cardview.widget.CardView
        android:background="#00FFFF"
        android:id="@+id/cardViewPhongUudai"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2.5dp">
        <FrameLayout
            android:background="#3500B0FF"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textViewGiamGia"
                android:fontFamily="@font/allan_bold"
                android:textColor="#ff00"
                android:textSize="20sp"
                android:text="30%"
                android:layout_gravity="top|right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/image_48px"
                    android:id="@+id/imageViewPhongUudai"
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                     />

                <TextView
                    android:fontFamily="@font/dancing_script"
                    android:id="@+id/textViewPhongUudai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="PhÃ²ng 1"
                    android:textColor="#0D0D0B" />

                <TextView
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/textViewGiamoi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="30000"
                    android:textColor="#ff00"
                    android:textSize="17dp" />
                <TextView
                    android:fontFamily="sans-serif-light"
                    android:text="30000"
                    android:gravity="center"
                    android:id="@+id/textViewGiacu"
                    android:textColor="#ff00"
                    android:textSize="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>